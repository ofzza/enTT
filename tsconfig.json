{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "importHelpers": true,
    "target": "es2017",
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["./src/index.ts", "./src/decorators/index.ts", "./src/**/*.spec.ts"],
  "paths": {
    "entt": ["./dist/"]
  }
}
