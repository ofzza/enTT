{
  "version": "2.0.0",
  "configurations": [
      {
          "name": "Launch: Tests",
          "type": "node",
          "request": "launch",

          "cwd": "${workspaceRoot}",
          "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
          "sourceMaps": true,
          "args": [
            "tests/**/*.js",
            "--no-timeouts"
          ],
          "preLaunchTask": null,
          "runtimeExecutable": null,
          "runtimeArgs": [ "--nolazy" ],
          "env": {
              "NODE_ENV": "development"
          },
          "console": "internalConsole"
      }
  ]
}
