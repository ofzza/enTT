{
  "version": "0.2.0",
  "configurations": [

    // Launch: Tests
    {
      "name": "Launch: Tests",
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "sourceMaps": true,
      "args": [
        "tests/**/*.js",
        "--no-timeouts"
      ],
      "preLaunchTask": null,
      "runtimeExecutable": null,
      "runtimeArgs": [ "--nolazy" ],
      "env": {
          "NODE_ENV": "development"
      },
      "console": "internalConsole",
      "useWSL": false
    },
    {
      "name": "Launch: Tests (WSL)",
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "sourceMaps": true,
      "args": [
        "tests/**/*.js",
        "--no-timeouts"
      ],
      "preLaunchTask": null,
      "runtimeExecutable": null,
      "runtimeArgs": [ "--nolazy" ],
      "env": {
          "NODE_ENV": "development"
      },
      "console": "internalConsole",
      "useWSL": true
    }
  ]
}
